<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <title>CheckProxy</title>
    <script src="https://kit.fontawesome.com/505beb7154.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav>
            <ul>
                <a href="index.html">
                    <figure id="logo">
                        <figcaption>
                            CheckProxy
                        </figcaption>
                    </figure>
                </a>

                <figure class="btns">
                    <a sp-area="" asp-page="/Index">
                        <li class="btn">
                            <i class="fas fa-home"></i>
                            Home
                        </li>
                    </a>
                    <a sp-area="" asp-page="/CheckPort">
                        <li class="btn">
                            <i class="fas fa-hdd"></i>
                            Check ports
                        </li>
                    </a>
                    <a sp-area="" asp-page="/CheckProxy">
                        <li class="btn">
                            <i class="fas fa-server"></i>
                            Check proxy
                        </li>
                    </a>
                    <li id="theme-switcher" class="btn">
                        <i class="fas fa-moon"></i>
                    </li>
                </figure>
            </ul>
        </nav>
    </header>
    <main>
        <!-- BODY -->
        @RenderBody()
        <!-- END BODY -->
    </main>
    <footer>
        <nav>
            <ul>
                <li id="copyright">
                    Copyright © 2020 Dimasik Inc. All rights reserved.
                </li>
                <figure class="btns">
                    <li class="btn">Privacy Policy</li>
                    <li class="btn">Terms of Use</li>
                    <li class="btn">Sales and Refunds</li>
                </figure>
            </ul>
        </nav>
    </footer>
    <script src="~/js/darktheme.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>